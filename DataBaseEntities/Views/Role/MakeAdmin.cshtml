
@{
    ViewData["Title"] = "MakeAdmin";
}

<h1>MakeAdmin</h1>

<form asp-action="MakeAdmin" method="post">

    <div class="form-group">

        <lable class="control-lable">Role</lable>
        <select name="role" class="form-control" asp-items=" ViewBag.Roles"></select>
    </div>

    <div class=" form-group">
        <lable class="control-lable">User</lable>
        <select name="user" class="form-control" asp-items="ViewBag.Users"></select>

    </div>
    <input type="submit" value="Create" class="btn btn-primary"/>

</form>